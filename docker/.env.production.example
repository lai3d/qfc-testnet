# QFC Testnet - Production Configuration Example
# ============================================================
# Copy this file to .env and modify for your domain
# ============================================================

# Public Domain
PUBLIC_DOMAIN=testnet.qfc.network

# Network
QFC_CHAIN_ID=9000
QFC_NETWORK=testnet

# Node Settings
QFC_NODE_COUNT=5
QFC_RPC_PORT=8545
QFC_WS_PORT=8546
QFC_P2P_PORT=30303
QFC_METRICS_PORT=6060

# Mining
QFC_MINING_ENABLED=true
QFC_MINING_THREADS=4

# Validators (REPLACE WITH SECURE KEYS FOR PRODUCTION!)
# Generate new keys: openssl rand -hex 32
VALIDATOR_1_KEY=<GENERATE_SECURE_KEY>
VALIDATOR_2_KEY=<GENERATE_SECURE_KEY>
VALIDATOR_3_KEY=<GENERATE_SECURE_KEY>
VALIDATOR_4_KEY=<GENERATE_SECURE_KEY>
VALIDATOR_5_KEY=<GENERATE_SECURE_KEY>

# Database (USE STRONG PASSWORD FOR PRODUCTION!)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=qfc
POSTGRES_PASSWORD=<GENERATE_SECURE_PASSWORD>
POSTGRES_DB=qfc_explorer

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================
# Public URLs (configure for your domain with HTTPS)
# ============================================================

# Explorer - accessible at https://explorer.testnet.qfc.network
EXPLORER_PORT=3000
NEXT_PUBLIC_RPC_URL=https://rpc.testnet.qfc.network
NEXT_PUBLIC_WS_URL=wss://rpc.testnet.qfc.network
NEXT_PUBLIC_CHAIN_ID=9000
NEXT_PUBLIC_BASE_URL=https://explorer.testnet.qfc.network

# Faucet - accessible at https://faucet.testnet.qfc.network
FAUCET_PORT=3001
FAUCET_PRIVATE_KEY=<FAUCET_WALLET_PRIVATE_KEY>
FAUCET_AMOUNT=100000000000000000000
FAUCET_COOLDOWN=86400

# Monitoring - accessible at https://grafana.testnet.qfc.network
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_ADMIN_PASSWORD=<GENERATE_SECURE_PASSWORD>
GRAFANA_ROOT_URL=https://grafana.testnet.qfc.network

# Resource Limits (adjust based on server capacity)
NODE_MEMORY_LIMIT=4g
NODE_CPU_LIMIT=4
